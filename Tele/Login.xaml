    <Grid Background="#FF151837" Name="ContentPanel">
        <Image Height="233" HorizontalAlignment="Left" Margin="162,61,0,0" Name="image1" Source="/Tele;component/Images/Sri_Lanka_Telecom_logo.png" Stretch="Fill" VerticalAlignment="Top" Width="162" ImageFailed="image1_ImageFailed" />
        <TextBox Height="72" HorizontalAlignment="Left" Margin="64,384,0,0" Name="usrname" Text="Username" VerticalAlignment="Top" Width="357" />
        <Button Content="Login" Height="98" HorizontalAlignment="Left" Margin="131,521,0,0" Name="loginbtn" VerticalAlignment="Top" Width="239" BorderThickness="3" Background="{x:Null}" BorderBrush="#FF0056A5" Click="loginbtn_Click" />
        <PasswordBox Height="72" HorizontalAlignment="Left" Margin="64,443,0,0" Name="passwrd" VerticalAlignment="Top" Width="357" Password="pass" />
    </Grid>
</phone:PhoneApplicationPage>
